<p style="color: green"><%= notice %></p>

<%= link_to "Products", products_path %>
<%= link_to "Cart", cart_path %>
<%= link_to "Back to orders", orders_path %>
<%= render @order %>

<div>
  <section>

    <header>
      <h1>Order <%= @order.id%></h1>
      <p>Your order is on the way!</p>
    </header>

    <div>
      <table>
        <thead>
          <tr>
            <th>Product</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% subtotal = 0.0 %>
          <% @order.order_items.each do |item| %>
            <%= render 'item', item: item %>
            <% subtotal += item.total_price_cents%>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <th colspan="4">
              TOTAL:
            </th>
            <th>
              <%= humanized_money_with_symbol @order.total_cents / 100.0%>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>

  </section>



</div>
