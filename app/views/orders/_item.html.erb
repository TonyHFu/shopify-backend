<% product =  Product.find(item.product_id) %>
<tr>
  <td>
    <p><%= product.name %></p>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol product.price %>
  </td>
  <td>
    <%= item.quantity %>
  </td>
  <td>
    <%= humanized_money_with_symbol product.price * item.quantity %>
  </td>
</tr>
