<tr>
  <td>
    <p><%= product.name %></p>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol product.price %>
  </td>
  <td>
    <%= button_to remove_item_cart_path(product_id: product.id)  do %> - <% end %>
    <%= quantity %>
    <%= button_to add_item_cart_path(product_id: product.id)  do %> + <% end %>
  </td>
  <td>
    <%= humanized_money_with_symbol product.price * quantity %>
  </td>
</tr>
