<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div id="products">
  <% @products.each do |product| %>
    <%= render product %>
    <p>
      <%= product.name %>
    </p>
    <p>
      Price: <%= humanized_money_with_symbol product.price_cents / 100.0 %>
    </p>
    <p>
      Quantity: <%= product.quantity%>
    </p>
    <p>
      <%= link_to "More Info", product %>
    </p>
  <% end %>
</div>

<%= link_to "New product", new_product_path %>
